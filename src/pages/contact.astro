---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="联系我!" />

  <ContactUs
    id="form"
    title="给我发消息"
    subtitle="有什么好的想法、点子、可以薅的羊毛，请告诉我"
 <!-- inputs={[
      {
        type: 'text',
        name: 'name',
        label: '昵称',
      },
      {
        type: 'email',
        name: 'email',
        label: '电子邮件',
      },
    ]}
    textarea={{
      label: '信息',
    }}
    disclaimer={{
      label:
        '提交此联系表格，即表示您承认并同意收集您的个人信息',
    }}
    description="24 小时内必回"-->
  /> 

  <!-- Features2 Widget ************** -->

  <Features2
    title="有信必回"
    items={[
      {
        title: 'Email',
        description: 'x@glee.ch',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
