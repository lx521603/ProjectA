---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <HeroText tagline="Contact" title="联系我!" />

  <!-- 紧凑的联系信息 -->
  <section class="px-4 md:px-6 py-8 mx-auto max-w-4xl text-center">
    <h2 class="text-xl font-bold mb-3">有什么好的想法、点子、可以薅的羊毛，请告诉我</h2>
    <p class="text-gray-600 mb-6">有信必回</p>
    
    <!-- 直接使用 Features2 的样式但去掉标题 -->
    <Features2
      items={[
        {
          title: 'Email',
          description: 'x@glee.ch',
          icon: 'tabler:mail',
          link: 'mailto:x@glee.ch'
        },
      ]}
    />
  </section>
</Layout>